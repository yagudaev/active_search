<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<%= form_with(method: :get, local: true) do |f| %>
  <%= text_field_tag :q, params[:q], placeholder: 'Search' %>
  <%= f.submit %>
<% end %>
Count: <%= @pages.total %>
Took: <%= @results.took %>ms
<table>
  <thead>
    <tr>
      <th>Link</th>
      <th>Content</th>
      <th>score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each_with_index do |page, index| %>
      <tr>
        <td><%= link_to page.link, "/#{page.link}" %></td>
        <td><%= page.content %></td>
        <td><%= @results[index]._score %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_page_path %>
